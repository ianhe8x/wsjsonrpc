{
  "compilerOptions": {
    "target": "esnext",
    "module": "none",
    "jsx": "preserve",
    "declaration": true,
     "outDir": "build",
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,

    "lib": [
      "DOM"
    ]
  }
}
